# MyT2ABRP Environment Configuration
# Copy this file to .env and fill in your values

# JWT Configuration
# CRITICAL: Generate a random secret for production
# Example: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-change-me-in-production

# HMAC Configuration
# CRITICAL: Generate a random key for production
# Example: openssl rand -hex 32
HMAC_KEY=your-hmac-key-here-change-me-in-production

# CORS Configuration
# Set to your frontend domain in production
# Example: https://myt2abrp.example.com
CORS_ORIGIN=*

# Vehicle Configuration
# Optional: Default VIN if not using multi-vehicle endpoint
VIN=

# Toyota API Configuration (Internal - Do not modify unless you know what you're doing)
TOYOTA_AUTH_URL=https://b2c-login.toyota-europe.com
TOYOTA_API_URL=https://ctpa-oneapi.tceu-ctp-prd.toyotaconnectedeurope.io

# Server Configuration
PORT=3000
HOST=localhost

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Monitoring
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Development
DEV_MODE=false
MOCK_TOYOTA_API=false
